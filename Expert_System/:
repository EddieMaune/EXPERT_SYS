#include "expert_sytem.h"

static int			is_and(char c)
{
	if (c == '+')
		return (1);
	return (0);
}

static int			is_or(char c)
{
		if (c == '|')
		return (1);
	return (0);

}

static int		is_xor(char c)
{
		if (c == '^')
		return (1);
	return (0);
}

